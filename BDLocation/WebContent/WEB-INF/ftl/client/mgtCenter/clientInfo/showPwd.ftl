	<form id="pwdForm">
    <div class="pw_box">
       <p><label id="oldPwdLabel">原始密码</label><input id="oldPwd" placeholder="请输入原来的登录密码" isNotNull type="password"><span id="oldPwdTip" style="color:red;">*</span></p>
       <p><label id="newPwdLabel">最新密码</label><input id="newPwd" placeholder="请输入新的登录密码" isNotNull type="password"><span id="newPwdTip" style="color:red;">*</span></p>
       <p><label id="secondPwdLabel">确认密码</label><input id="secondPwd" equalField="newPwd:两次输入密码不一样" placeholder="请输入确认密码" isNotNull type="password"><span id="secondPwdTip" style="color:red;">*</span></p>
       <p class="pw_sub"><input type="button" onclick="checkPwd()" value="确认修改"></p>
    </div>
    </form>

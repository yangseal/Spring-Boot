  .box_con{
	max-width: 300px;
	max-height: 500px;
	border:1px #cccccc solid;
	border-radius: 3px;
	padding: 10px 15px;
	background-color: #fff;
	font-family:"microsoft yahei";
  }
  .box_con h2{
	margin: 0;
	padding: 0;
	height: 26px;
	line-height: 26px;
	font-size: 14px;
	color: #333;
  }
  .box_con p{
	margin: 0;
	padding: 0;
	line-height: 22px;
	font-size: 12px;
	color: #666;
  }
  .box_img{
	width: 20px;
	height: 16px;
	margin: 0 auto;
	position: relative;
	margin-top: -1px;
	z-index: 999;
  }